{% extends "base.twig" %}


{% block content %}

<div class="goods-row">
    <div class="wrapper">
        <div class="container-fluid padding-less first-row">
            {% for key in goods_data %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img class="goods img-rounded" src="/public/static/img/{{ key.preview }}" alt="{{ key.title }}">
                    <div class="caption">
                        <h3 class="text-center">{{ key.title }}</h3>
                        <p class="text-center">
                            {{ key.description }}
                        </p>
                        <p class="text-right">
                            Цена: {{ key.price }}
                        </p>
                        <p><a href="/public/description/{{ key.id }}" class="btn btn-block btn-default" role="button">Подробнее</a></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}



